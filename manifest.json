{
    "manifest_version": 3,
    "name": "Bilibili视频下载器",
    "version": "1.0",
    "description": "一个用于下载Bilibili视频的Edge浏览器扩展。",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
